@model IEnumerable<click_imoveis.Models.Imovel>

@{
    ViewData["Title"] = "Imóveis";
}

<div class="container">
    <hr class="mt-0 h-2px" />
    <h1>Lista de Imóveis</h1>

    <p>
        <a asp-action="Create" class="btn btn-success">Cadastrar Novo Imóvel</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Logradouro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Logradouro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>

                    <td>
                        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ImovelId">Editar</a> |
                        <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.ImovelId">Detalhes</a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ImovelId">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



