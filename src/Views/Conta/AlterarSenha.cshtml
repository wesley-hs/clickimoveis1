@model click_imoveis.Models.AlterarSenhaViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}
@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">
                        <i class="bi bi-key"></i> Alterar Senha
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="AlterarSenha" method="post">
                        <div class="mb-3">
                            <label asp-for="SenhaAtual" class="form-label"></label>
                            <input asp-for="SenhaAtual" class="form-control" type="password" />
                            <span asp-validation-for="SenhaAtual" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NovaSenha" class="form-label"></label>
                            <input asp-for="NovaSenha" class="form-control" type="password" />
                            <span asp-validation-for="NovaSenha" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ConfirmarNovaSenha" class="form-label"></label>
                            <input asp-for="ConfirmarNovaSenha" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmarNovaSenha" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success me-2">
                                <i class="bi bi-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
