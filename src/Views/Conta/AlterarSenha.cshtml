@model click_imoveis.Models.AlterarSenhaViewModel

@{
    ViewData["Title"] = "Alterar Senha";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success">@TempData["MensagemSucesso"]</div>
}
@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">@TempData["MensagemErro"]</div>
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="card shadow" style="width: 100%; max-width: 450px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">
                <i class="bi bi-key"></i> Alterar Senha
            </h3>
            <form asp-action="AlterarSenha" method="post" autocomplete="off">
                <div class="mb-3" style="position: relative;">
                    <label for="SenhaAtual" class="form-label">Senha Atual</label>
                    <input type="password" id="SenhaAtual" name="SenhaAtual" class="form-control" required />
                    <button type="button" id="toggleSenhaAtual" tabindex="-1"
                            style="position: absolute; top: 38px; right: 10px; background: none; border: none; cursor: pointer;">
                        <span id="iconSenhaAtual" style="font-size: 1.2em;">👁️</span>
                    </button>
                    <span asp-validation-for="SenhaAtual" class="text-danger"></span>
                </div>
                <div class="mb-3" style="position: relative;">
                    <label for="NovaSenha" class="form-label">Nova Senha</label>
                    <input type="password" id="NovaSenha" name="NovaSenha" class="form-control" required />
                    <button type="button" id="toggleNovaSenha" tabindex="-1"
                            style="position: absolute; top: 38px; right: 10px; background: none; border: none; cursor: pointer;">
                        <span id="iconNovaSenha" style="font-size: 1.2em;">👁️</span>
                    </button>
                    <span asp-validation-for="NovaSenha" class="text-danger"></span>
                </div>
                <div class="mb-3" style="position: relative;">
                    <label for="ConfirmarNovaSenha" class="form-label">Confirmar Nova Senha</label>
                    <input type="password" id="ConfirmarNovaSenha" name="ConfirmarNovaSenha" class="form-control" required />
                    <button type="button" id="toggleConfirmarNovaSenha" tabindex="-1"
                            style="position: absolute; top: 38px; right: 10px; background: none; border: none; cursor: pointer;">
                        <span id="iconConfirmarNovaSenha" style="font-size: 1.2em;">👁️</span>
                    </button>
                    <span asp-validation-for="ConfirmarNovaSenha" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-warning">Voltar</a>
                    <button type="submit" class="btn btn-primary">Alterar Senha</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePassword(inputId, iconId) {
            var input = document.getElementById(inputId);
            var icon = document.getElementById(iconId);
            if (input.type === "password") {
                input.type = "text";
                icon.textContent = "🙈";
            } else {
                input.type = "password";
                icon.textContent = "👁️";
            }
        }
        document.getElementById('toggleSenhaAtual').addEventListener('click', function () {
            togglePassword('SenhaAtual', 'iconSenhaAtual');
        });
        document.getElementById('toggleNovaSenha').addEventListener('click', function () {
            togglePassword('NovaSenha', 'iconNovaSenha');
        });
        document.getElementById('toggleConfirmarNovaSenha').addEventListener('click', function () {
            togglePassword('ConfirmarNovaSenha', 'iconConfirmarNovaSenha');
        });
    </script>
}
