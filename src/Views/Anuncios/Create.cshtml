@model click_imoveis.Models.Anuncio

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <hr class="mt-0 h-2px" />
    <h1>Cadastrar novo anúncio</h1>


    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DataInicio" class="control-label"></label>
                    <input asp-for="DataInicio" class="form-control" />
                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DataFim" class="control-label"></label>
                    <input asp-for="DataFim" class="form-control" />
                    <span asp-validation-for="DataFim" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValorCondominio" class="control-label"></label>
                    <input asp-for="ValorCondominio" class="form-control" />
                    <span asp-validation-for="ValorCondominio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ValorIptu" class="control-label"></label>
                    <input asp-for="ValorIptu" class="form-control" />
                    <span asp-validation-for="ValorIptu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Finalidade" class="control-label"></label>
                    <select asp-for="Finalidade" class="form-control" asp-items="Html.GetEnumSelectList<Finalidade>()"></select>
                    <span asp-validation-for="Finalidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImovelId" class="control-label"></label>
                    <select asp-for="ImovelId" class="form-control" asp-items="ViewBag.ImovelId"></select>
                </div>

                <div class="form-group">
                    <a asp-action="Index" class="btn btn-warning">Voltar</a> |
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
