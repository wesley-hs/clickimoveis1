@model click_imoveis.Models.Anuncio

@{
    ViewData["Title"] = "Editar Anúncio";
}

<h1>Editar Anúncio</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnuncioId" />
            <input type="hidden" asp-for="ImovelId" />
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorCondominio" class="control-label"></label>
                <input asp-for="ValorCondominio" class="form-control" />
                <span asp-validation-for="ValorCondominio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorIptu" class="control-label"></label>
                <input asp-for="ValorIptu" class="form-control" />
                <span asp-validation-for="ValorIptu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Finalidade" class="control-label"></label>
                <select asp-for="Finalidade" class="form-control" asp-items="Html.GetEnumSelectList<Finalidade>()"></select>
                <span asp-validation-for="Finalidade" class="text-danger"></span>
            </div>

            <br />

            @{
                if (Model.Usuario != null && Model.Usuario.Email != null)
                {
                    <div class="form-group">
                        <label>Anunciante</label>
                        <input asp-for="@Model.Usuario.Email" class="form-control" asp-items="@Model.Usuario.Email" disabled>

                    </div>
                } else
                {
                    <div class="form-group">
                        <label>Anunciante</label>
                        <input class="form-control" value="null" disabled>

                    </div>
                }
            }


            <br />
            <h5>Detalhes do Imóvel:</h5>

            @{
                if (Model.Imovel != null)
                {
                    <div class="form-group">
                        <label asp-for="@Model.Imovel.Logradouro" class="control-label"></label>
                        <input asp-for="@Model.Imovel.Logradouro" class="form-control" disabled/>                        
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Imovel.Numero" class="control-label"></label>
                        <input asp-for="@Model.Imovel.Numero" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Imovel.Complemento" class="control-label"></label>
                        <input asp-for="@Model.Imovel.Complemento" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Imovel.Bairro" class="control-label"></label>
                        <input asp-for="@Model.Imovel.Bairro" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Imovel.Cidade" class="control-label"></label>
                        <input asp-for="@Model.Imovel.Cidade" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Imovel.Estado" class="control-label"></label>
                        <input asp-for="@Model.Imovel.Estado" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Imovel.CodigoPostal" class="control-label"></label>
                        <input asp-for="@Model.Imovel.CodigoPostal" class="form-control" disabled />
                    </div>
                }
            }

            <br />
            
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-warning">Voltar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
