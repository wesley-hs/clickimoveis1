@model IEnumerable<click_imoveis.Models.Anuncio>

@{
    ViewData["Title"] = "Lista de Anúncios";
}

<h1>Lista de Anúncios</h1>
<form asp-controller="Anuncios" asp-action="Pesquisar" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar imóveis..." />
        <button class="btn btn-success" type="submit">Buscar</button>
    </div>
</form>


<p>
    <a asp-action="Create" class="btn btn-success">Criar novo anúncio</a>
</p>

<table class="table table-striped table-hover table-responsive">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.DataInicio)</th>
            <th>@Html.DisplayNameFor(model => model.DataFim)</th>
            <th>@Html.DisplayNameFor(model => model.Finalidade)</th>
            <th>@Html.DisplayNameFor(model => model.Valor)</th>
            <th>@Html.DisplayNameFor(model => model.Titulo)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>Anunciante</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.DataInicio)</td>
            <td>@Html.DisplayFor(modelItem => item.DataFim)</td>
            <td>
                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Finalidade)</span>
            </td>
            <td>@Html.DisplayFor(modelItem => item.Valor)</td>
            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
            <td>@Html.DisplayFor(modelItem => item.Usuario.Email)</td>
            <td>
                <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.AnuncioId">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.AnuncioId">
                    <i class="bi bi-eye"></i> Detalhes
                </a>
                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.AnuncioId">
                    <i class="bi bi-trash"></i> Apagar
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
