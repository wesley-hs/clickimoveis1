@{
    ViewData["Title"] = "Recuperar Senha";
}
<h2>Recuperar Senha</h2>
<form method="post">
    <label for="email">E-mail:</label>
    <input type="email" name="email" required />
    <button type="submit">Enviar link de recuperação</button>
</form>
@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
