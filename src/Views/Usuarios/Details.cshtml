@model click_imoveis.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes da conta</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pessoa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pessoa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoDeUsuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoDeUsuario)
        </dd>


        @{
            if (Model.Pessoa == Pessoa.PessoaFisica && Model.PessoaFisica != null)
            {
                <dt class="col-sm-2">
                    Nome Completo
                </dt>
                <dd class="col-sm-10">
                    <p>@Model.PessoaFisica.NomeCompleto</p>
                </dd>
            }

            if (Model.Pessoa == Pessoa.PessoaJuridica && Model.PessoaJuridica != null)
            {
                <dt class="col-sm-2">
                    Razão Social
                </dt>
                <dd class="col-sm-10">
                    <p>@Model.PessoaJuridica.RazaoSocial</p>
                </dd>
            }
        }
        
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-warning">Voltar</a> |
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.UsuarioId">Editar</a> 
    
</div>
