@model click_imoveis.Models.Mensagem

@{
    ViewData["Title"] = "Excluir Menagem";
}
<div class="container">
    <hr class="mt-0 h-2px" />
    <h1>Excluir Menagem</h1>

    <div class="alert alert-warning">
        Tem certeza que deseja excluir esta mensagem?
    </div>

    <div>
        <h4>Mensagem</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataCriacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCriacao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Conteudo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Conteudo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Anuncio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Anuncio.AnuncioId)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MensagemId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar para a lista</a>
        </form>
    </div>

</div>
