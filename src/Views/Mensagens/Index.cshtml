@model IEnumerable<click_imoveis.Models.Mensagem>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Mensagens</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conteudo)
            </th>
            <th>
               Usuário Vinculado
            </th>
            <th>
               Anúncio Vinculado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conteudo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anuncio.AnuncioId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MensagemId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MensagemId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MensagemId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
