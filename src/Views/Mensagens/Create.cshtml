@model click_imoveis.Models.Mensagem

@{
    ViewData["Title"] = "Create";
}

<h1>Mensagem</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" id="formularioMensagem">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Mensagem.Conteudo" class="control-label"></label>
                <input asp-for="Mensagem.Conteudo" class="form-control" />
                <span asp-validation-for="Mensagem.Conteudo" class="text-danger"></span>
            </div>        
            
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

