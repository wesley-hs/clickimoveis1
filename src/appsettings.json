{
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "EmailSettings": {
        "ServidorSmtp": "smtp.sendgrid.net",
        "Porta": 587,
        "EmailRemetente": "contato@clickimoveis.com",
        "Senha": "SG.sua-chave-api", // Chave API do SendGrid
        "NomeRemetente": "Click Imóveis",

        "// Comentário": "READ-ME: Para configurar:",
        "// 1": "Crie uma Senha de App em: https://myaccount.google.com/apppasswords",
        "// 2": "Selecione 'Mail' como aplicativo e 'Outro' como dispositivo",
        "// 3": "Nomeie como 'Click Imóveis' e cole a senha gerada acima",
        "// 4": "Para testes locais, use Mailtrap.io com:",
        "// Mailtrap": "Servidor: sandbox.smtp.mailtrap.io | Porta: 2525"
    },
    "AllowedHosts": "*"
}
